{"$schema":"http://json-schema.org/draft-04/schema#","id":"https://api.dev.maas.global/geocoding/geocoding-query/request.json","description":"MaaS geocoding query request schema.","type":"object","properties":{"identityId":{"type":"string","pattern":"^[aepus]{2}-[\\w]{4}-\\d:[a-f\\d]{8}(-[a-f\\d]{4}){3}-[a-f\\d]{12}$"},"payload":{"type":"object","properties":{"name":{"type":"string","minLength":2,"maxLength":128},"lat":{"type":"number","minimum":-90,"maximum":90},"lon":{"type":"number","minimum":-180,"maximum":180},"count":{"type":"integer","minimum":1,"maximum":100,"default":5},"radius":{"type":"number","minimum":0,"maximum":20038000},"locale":{"default":"fi-FI","type":"string","pattern":"^[a-z]{2,3}(?:-[a-zA-Z]{4})?(?:-[A-Z]{2,3})?$"}},"required":["name","lat","lon"],"additionalProperties":false}},"required":["payload"],"additionalProperties":false}