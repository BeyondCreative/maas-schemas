{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/subscription-put/response",
  "description": "Response schema for subscription-put",
  "type": "object",
  "properties": {
    "subscription": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "id": {
              "description": "The identifier of the subscription (equals the user identityId)",
              "type": "string",
              "pattern": "^[aepus]{2}-[\\w]{4}-\\d:[a-f\\d]{8}(-[a-f\\d]{4}){3}-[a-f\\d]{12}$"
            },
            "customerId": {
              "description": "The identifier of the customer of the subscription (equals the customer identityId)",
              "type": "string",
              "pattern": "^[aepus]{2}-[\\w]{4}-\\d:[a-f\\d]{8}(-[a-f\\d]{4}){3}-[a-f\\d]{12}$"
            },
            "plan": {
              "description": "Customer subscription plan",
              "type": "object",
              "properties": {
                "id": {
                  "description": "Identifier for matching the plans (Chargebee compat.)",
                  "type": "string",
                  "pattern": "^[^\\s\\/]{1,50}$"
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "price": {
                  "description": "A fare/price as billed by a TSP from MaaS in EUR",
                  "type": "object",
                  "required": [
                    "amount",
                    "currency"
                  ],
                  "properties": {
                    "amount": {
                      "type": "number",
                      "minimum": 0,
                      "multipleOf": 0.01
                    },
                    "currency": {
                      "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
                      "type": "string",
                      "enum": [
                        "EUR"
                      ]
                    }
                  },
                  "additionalProperties": false
                }
              },
              "required": [
                "id"
              ],
              "additionalProperties": true
            },
            "addons": {
              "type": "array",
              "items": {
                "description": "Customer subscription add-ons",
                "type": "object",
                "properties": {
                  "id": {
                    "description": "Identifier for matching the plans (Chargebee compat.)",
                    "type": "string",
                    "pattern": "^[^\\s\\/]{1,50}$"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "quantity": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100000
                  },
                  "price": {
                    "description": "A fare/price as billed by a TSP from MaaS in EUR",
                    "type": "object",
                    "required": [
                      "amount",
                      "currency"
                    ],
                    "properties": {
                      "amount": {
                        "type": "number",
                        "minimum": 0,
                        "multipleOf": 0.01
                      },
                      "currency": {
                        "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
                        "type": "string",
                        "enum": [
                          "EUR"
                        ]
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "required": [
                  "id",
                  "quantity"
                ],
                "additionalProperties": true
              }
            },
            "coupons": {
              "type": "array",
              "items": {
                "description": "Additional coupon that may provide discounts",
                "type": "object",
                "properties": {
                  "id": {
                    "description": "Identifier for matching the plans (Chargebee compat.)",
                    "type": "string",
                    "pattern": "^[^\\s\\/]{1,50}$"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "id"
                ]
              }
            }
          }
        }
      ],
      "required": [
        "id",
        "plan",
        "addons",
        "coupons"
      ]
    },
    "debug": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "subscription"
  ],
  "additionalProperties": false
}