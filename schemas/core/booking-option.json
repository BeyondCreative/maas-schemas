{
  "$id": "http://maasglobal.com/core/booking-option.json",
  "description": "MaaS single TSP adapter option",
  "oneOf": [
    {
      "$ref": "#/definitions/contentWithCost"
    },
    {
      "$ref": "#/definitions/contentWithConfigurator"
    }
  ],
  "definitions": {
    "contentWithCost": {
      "type": "object",
      "required": ["leg", "meta", "terms", "tspProduct", "cost"],
      "properties": {
        "leg": {
          "$ref": "#/definitions/leg"
        },
        "terms": {
          "$ref": "http://maasglobal.com/core/booking.json#/definitions/terms"
        },
        "meta": {
          "$ref": "http://maasglobal.com/core/booking.json#/definitions/meta"
        },
        "tspProduct": {
          "$ref": "#/definitions/tspProduct"
        },
        "cost": {
          "$ref": "http://maasglobal.com/core/components/cost.json"
        },
        "customer": {
          "$ref": "#/definitions/customer"
        }
      }
    },
    "contentWithConfigurator": {
      "type": "object",
      "required": ["leg", "meta", "terms", "tspProduct", "configurator"],
      "properties": {
        "leg": {
          "$ref": "#/definitions/leg"
        },
        "terms": {
          "$ref": "http://maasglobal.com/core/booking.json#/definitions/terms"
        },
        "meta": {
          "$ref": "http://maasglobal.com/core/booking.json#/definitions/meta"
        },
        "tspProduct": {
          "$ref": "#/definitions/tspProduct"
        },
        "configurator": {
          "$ref": "http://maasglobal.com/core/components/configurator.json"
        },
        "customer": {
          "$ref": "#/definitions/customer"
        }
      }
    },
    "customer": {
      "description": "MaaS customer data",
      "type": "object",
      "properties": {
        "firstName": {
          "description": "First name of the customer (e.g. John)",
          "$ref": "components/common.json#/definitions/personalName"
        },
        "lastName": {
          "description": "Last name of the customer (e.g. Doe)",
          "$ref": "components/common.json#/definitions/personalName"
        },
        "phone": {
          "description": "ITU-T E.164 phone number",
          "$ref": "components/common.json#/definitions/phone"
        },
        "rawPhone": {
          "description": "Slightly looser definition of phone number",
          "$ref": "components/common.json#/definitions/rawPhone"
        },
        "email": {
          "description": "Rough validation of a valid e-mail address",
          "$ref": "components/common.json#/definitions/email"
        },
        "locale": {
          "$ref": "components/i18n.json#/definitions/locale"
        },
        "appInstanceId": {
          "description": "An id specific to a user device",
          "$ref": "components/common.json#/definitions/appInstanceId"
        },
        "opaqueId": {
          "description": "Typically the hash of the identityId",
          "$ref": "components/common.json#/definitions/opaqueId"
        },
        "dob": {
          "description": "The customer's date of birth",
          "$ref": "components/units.json#/definitions/isoDate"
        },
        "ssid": {
          "description": "Social Security ID",
          "$ref": "components/common.json#/definitions/ssid"
        },
        "additionalProperties": false,
        "required": ["firstName", "lastName", "phone", "email"]
      }
    },
    "leg": {
      "type": "object",
      "description": "A subset of the standard leg (../core/leg.json)",
      "properties": {
        "mode": {
          "$ref": "http://maasglobal.com/core/components/travel-mode.json"
        },
        "startTime": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/time"
        },
        "endTime": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/time"
        },
        "from": {
          "description": "Starting location's lat and lon pair of this request",
          "$ref": "http://maasglobal.com/core/components/units-geo.json#/definitions/place"
        },
        "to": {
          "$ref": "http://maasglobal.com/core/components/units-geo.json#/definitions/place"
        },
        "departureDelay": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/duration"
        },
        "agencyId": {
          "$ref": "http://maasglobal.com/core/components/common.json#/definitions/agencyId"
        }
      },
      "additionalProperties": false,
      "required": ["mode", "startTime", "endTime", "from", "to"]
    },
    "legDelta": {
      "type": "object",
      "description": "A leg delta, containing any subset of the valid properties",
      "properties": {
        "mode": {
          "$ref": "http://maasglobal.com/core/components/travel-mode.json"
        },
        "startTime": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/time"
        },
        "endTime": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/time"
        },
        "departureDelay": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/duration"
        },
        "from": {
          "$ref": "http://maasglobal.com/core/components/units-geo.json#/definitions/place"
        },
        "to": {
          "$ref": "http://maasglobal.com/core/components/units-geo.json#/definitions/place"
        }
      },
      "additionalProperties": false
    },
    "tspProduct": {
      "description": "Defines what kind of TSP product the booking option represents.",
      "type": "object",
      "properties": {
        "id": {
          "description": "Unique identifier for the product",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": ["id"],
      "additionalProperties": false
    }
  }
}
