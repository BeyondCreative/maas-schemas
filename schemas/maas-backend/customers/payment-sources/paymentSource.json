{
  "$id": "http://maasglobal.com/maas-backend/customers/payment-sources/paymentSource.json",
  "description": "MaaS payment source schema",
  "definitions": {
    "paymentSourceId": {
      "type": "string",
      "minLength": 2
    },
    "paymentSource": {
      "description": "Payment source",
      "type": "object",
      "properties": {
        "paymentSourceId": {
          "$ref": "#/definitions/paymentSourceId"
        },
        "gatewayName": {
          "type": "string",
          "minLength": 4
        },
        "type": {
          "type": "string",
          "minLength": 4
        },
        "expiryYear": {
          "type": "number",
          "minimum": 2018,
          "multipleOf": 1
        },
        "expiryMonth": {
          "type": "number",
          "minimum": 1,
          "maximum": 12,
          "multipleOf": 1
        },
        "cardNumbers": {
          "type": "string",
          "minLength": 10
        },
        "issuer": {
          "type": "string",
          "minLength": 2
        },
        "billingCountry": {
          "$ref": "http://maasglobal.com/core/components/station.json#/definitions/country"
        },
        "billingZip": {
          "$ref": "http://maasglobal.com/core/components/address.json#/definitions/zipCode"
        },
        "alias": {
          "type": "string",
          "minLength": 3,
          "maxLength": 100
        }
      },
      "required": [ "paymentSourceId", "gatewayName", "type" ],
      "additionalProperties": false
    }
  }
}
