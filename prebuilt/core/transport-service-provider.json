{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/transport-service-provider",
  "description": "MaaS Transport Service Provider (TSP) metadata",
  "type": "object",
  "required": [
    "agencyId",
    "name",
    "modes",
    "locations"
  ],
  "properties": {
    "agencyId": {
      "description": "The id of the TSP, as identified by route provider",
      "type": "string"
    },
    "name": {
      "description": "The human readable name of the TSP",
      "type": "string"
    },
    "modes": {
      "description": "The OTP modes this TSP serves",
      "type": "array",
      "items": [
        {
          "type": "string",
          "enum": [
            "WALK",
            "BICYCLE",
            "CAR",
            "TRAM",
            "SUBWAY",
            "RAIL",
            "BUS",
            "FERRY",
            "CABLE_CAR",
            "GONDOLA",
            "FUNICULAR",
            "TRANSIT",
            "TRAIN",
            "TRAINISH",
            "BUSISH",
            "LEG_SWITCH",
            "MAAS_TRIP",
            "MAAS_PERSONAL",
            "TAXI"
          ]
        }
      ]
    },
    "locations": {
      "type": "array",
      "description": "Supporting locations of the TSP",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "Point"
            ]
          },
          "coordinates": {
            "type": "array",
            "items": [
              {
                "type": "number",
                "minimum": -90,
                "maximum": 90
              },
              {
                "type": "number",
                "minimum": -180,
                "maximum": 180
              }
            ]
          }
        },
        "additionalProperties": false,
        "required": [
          "type",
          "coordinates"
        ]
      }
    },
    "adapter": {
      "description": "The schema version for the adapter",
      "hostname": "string",
      "port": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535
      },
      "basepath": "string"
    }
  }
}