{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "MaaS stations query request schema",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "location": {
          "$ref": "../../core/components/units-geo.json#/definitions/shortLocationString"
        },
        "radius": {
          "$ref": "../../core/components/units-geo.json#/definitions/distance"
        }
      },
      "required": ["location"]
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3
        },
        "count": {
          "type": "integer",
          "minimum": 1
        },
        "type": {
          "enum": ["origin", "destination"]
        }
      },
      "required": ["name", "type"]
    }
  ]
}
