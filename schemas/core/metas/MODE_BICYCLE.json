{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "pickupStation": {
      "$ref": "#/definitions/bikeStation"
    },
    "returnStation": {
      "$ref": "#/definitions/bikeStation"
    },
    "bike": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id"]
    }
  },
  "definitions": {
    "bikeStation": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "location": {
          "$ref": "../components/units-geo.json#/definitions/location"
        },
        "slots": {
          "type": "object",
          "properties": {
            "total": {
              "type": "number",
              "minimum": 0
            },
            "empty": {
              "type": "number",
              "minimum": 0
            },
            "bikes": {
              "type": "number",
              "minimum": 0
            }
          },
          "required": ["total", "empty", "bikes"]
        }
      },
      "required": ["id", "name", "location"]
    }
  }
}
