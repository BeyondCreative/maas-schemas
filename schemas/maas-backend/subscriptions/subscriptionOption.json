{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/subscriptionOption",
  "description": "MaaS subscription option schema",
  "allOf": [
    { "$ref": "./subscription.json#/definitions/subscriptionBase" },
    { "$ref": "#/definitions/subscriptionAdditions" }
  ],
  "definitions": {
    "subscriptionAdditions": {
      "type": "object",
      "properties": {
        "plan": {
          "type": "object"
        },
        "addons": {
          "type": "array"
        },
        "coupons": {
          "type": "array"
        },
        "discounts": {
          "type": "array"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "points": {
          "type": "integer",
          "minValue": 0
        },
        "image": {
          "$ref": "../../core/units.json#/definitions/url"
        },
        "availability": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [ "plan", "availability", "name", "description" ],
      "additionalProperties": true
    }
  }
}
