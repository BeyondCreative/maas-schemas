{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/profile",
  "description": "MaaS user profiles as saved on DynamoDB",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "./aws-units.json#/definitions/identityId"
    },
    "phone": {
      "$ref": "./units.json#/definitions/phone"
    },
    "email": {
      "$ref": "./units.json#/definitions/email"
    },
    "firstName": {
      "type": "string",
      "minLength": 1
    },
    "lastName": {
      "type": "string",
      "minLength": 1
    },
    "city": {
      "type": "string",
      "minLength": 1
    },
    "country": {
      "type": "string",
      "minLength": 1
    },
    "zipCode": {
      "type": "string",
      "minLength": 1
    },
    "plans": {
      "type": "array",
      "items": {
        "$ref": "./maas-package.json#/definitions/plan"
      }
    },
    "profileImageUrl": {
      "type": "string",
      "minLength": 1
    },
    "favoriteLocations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/favoriteLocation"
      }
    },
    "balance": {
      "type": "integer"
    },
    "paymentMethodStatus": {
      "type": "string",
      "enum": ["valid", "valid_expiring", "invalid", "unknown"]
    }
  },
  "additionalProperties": false,
  "required": [ "identityId", "phone", "email", "plans", "balance" ],
  "definitions": {
    "favoriteLocation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "address", "lat", "lon"],
      "properties": {
        "name":{
          "type": "string"
        },
        "address":{
          "type": "string"
        },
        "lat":{
          "$ref": "./units.json#/definitions/latitude"
        },
        "lon":{
          "$ref": "./units.json#/definitions/longitude"
        }
      }
    }
  }
}
