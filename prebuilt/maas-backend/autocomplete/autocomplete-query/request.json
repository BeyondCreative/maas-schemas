{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/autocomplete/autocomplete-query/request",
  "description": "Request schema for autocomplete",
  "type": "object",
  "properties": {
    "identityId": {
      "type": "string",
      "pattern": "^[aepus]{2}-[\\w]{4}-\\d:[a-f\\d]{8}(-[a-f\\d]{4}){3}-[a-f\\d]{12}$"
    },
    "payload": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "([\\dA-รถ]\\s?)+",
          "minLength": 3,
          "maxLength": 128
        },
        "lat": {
          "description": "Geographic latitude (north-south axis) in WGS-84 system, see https://en.wikipedia.org/wiki/World_Geodetic_System",
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "multipleOf": 0.000001
        },
        "lon": {
          "description": "Geographic latitude (north-south axis) in WGS-84 system, see https://en.wikipedia.org/wiki/World_Geodetic_System",
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "multipleOf": 0.000001
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 5
        },
        "radius": {
          "default": 5000,
          "description": "Distance in meters",
          "type": "number",
          "minimum": 0,
          "maximum": 40075000,
          "multipleOf": 0.000001
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}