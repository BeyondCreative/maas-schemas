{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/autocomplete/autocomplete-query/request",
  "description": "Request schema for autocomplete",
  "type": "object",
  "allOf": [
    {
      "$ref": "../../../core/units.json#/definitions/location"
    },
    {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 5,
          "maxLength": 128
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 5
        },
        "radius": {
          "$ref": "../../../core/units.json#/definitions/distance"
        }
      }
    }
  ]
}
