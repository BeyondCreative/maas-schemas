{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/subscription",
  "description": "MaaS subscription schema",
  "type": "object",
  "properties": {
    "lineItems": {
      "type": "array",
      "items": {
        "description": "An item that is priced with it summaries",
        "type": "object",
        "properties": {
          "id": {
            "description": "Identifier for matching the plans (Chargebee compat.)",
            "type": "string",
            "pattern": "^[^\\s\\/]{1,50}$"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "quantity": {
            "type": "number",
            "minValue": 0
          },
          "price": {
            "description": "Price of one unit after all taxes & discounts",
            "type": "object",
            "required": [
              "amount",
              "currency"
            ],
            "properties": {
              "amount": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 0.01
              },
              "currency": {
                "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
                "type": "string",
                "enum": [
                  "EUR"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "id",
          "description",
          "quantity",
          "unitPrice"
        ],
        "additionalProperties": false
      }
    },
    "discounts": {
      "type": "array",
      "items": {
        "description": "A discount from coupon or such",
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1
          },
          "discount": {
            "description": "Price of one unit after all taxes & discounts",
            "type": "object",
            "required": [
              "amount",
              "currency"
            ],
            "properties": {
              "amount": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 0.01
              },
              "currency": {
                "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
                "type": "string",
                "enum": [
                  "EUR"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "description",
          "discount"
        ],
        "additionalProperties": false
      }
    },
    "total": {
      "description": "Sum of the quantity * unitPrice - sum of discounts",
      "type": "object",
      "required": [
        "amount",
        "currency"
      ],
      "properties": {
        "amount": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "currency": {
          "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
          "type": "string",
          "enum": [
            "EUR"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "lineItems",
    "totals"
  ],
  "additionalProperties": false,
  "definitions": {
    "lineItem": {
      "description": "An item that is priced with it summaries",
      "type": "object",
      "properties": {
        "id": {
          "description": "Identifier for matching the plans (Chargebee compat.)",
          "type": "string",
          "pattern": "^[^\\s\\/]{1,50}$"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "quantity": {
          "type": "number",
          "minValue": 0
        },
        "price": {
          "description": "Price of one unit after all taxes & discounts",
          "type": "object",
          "required": [
            "amount",
            "currency"
          ],
          "properties": {
            "amount": {
              "type": "number",
              "minimum": 0,
              "multipleOf": 0.01
            },
            "currency": {
              "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
              "type": "string",
              "enum": [
                "EUR"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "description",
        "quantity",
        "unitPrice"
      ],
      "additionalProperties": false
    },
    "discount": {
      "description": "A discount from coupon or such",
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "minLength": 1
        },
        "discount": {
          "description": "Price of one unit after all taxes & discounts",
          "type": "object",
          "required": [
            "amount",
            "currency"
          ],
          "properties": {
            "amount": {
              "type": "number",
