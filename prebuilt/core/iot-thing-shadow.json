{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/iot-thing-shadow",
  "description": "Schema for MaaS thing shadow",
  "type": "object",
  "properties": {
    "desired": {
      "type": "object",
      "properties": {}
    },
    "reported": {
      "type": "object",
      "properties": {
        "location": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "lon": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            },
            "timestamp": {
              "type": "integer",
              "maximum": 9007199254740991,
              "minimum": 1451606400
            },
            "legId": {
              "type": "string",
              "pattern": "^[A-Fa-f0-9]{8}(-[A-Fa-f0-9]{4}){3}-[A-Fa-f0-9]{12}$"
            }
          }
        },
        "leg": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Fa-f0-9]{8}(-[A-Fa-f0-9]{4}){3}-[A-Fa-f0-9]{12}$"
            },
            "timestamp": {
              "type": "integer",
              "maximum": 9007199254740991,
              "minimum": 1451606400
            },
            "state": {
              "type": "string",
              "enum": [
                "START",
                "PLANNED",
                "PAID",
                "ACTIVATED",
                "CANCELLED",
                "CANCELLED_WITH_ERRORS",
                "FINISHED"
              ]
            }
          }
        }
      }
    }
  }
}