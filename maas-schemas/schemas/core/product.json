{
  "$id": "http://maasglobal.com/core/product.json",
  "description": "Product in core which encapsulates at least an id, name and a tspProductId",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "icon": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "priority": {
      "type": "integer",
      "minimum": 0
    },
    "agencyId": {
      "$ref": "http://maasglobal.com/core/components/common.json#/definitions/agencyId"
    },
    "tspProductId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "allowFinishTrip": {
      "type": "boolean"
    },
    "preAuthBufferPercentage": {
      "$ref": "#/definitions/preAuthBufferPercentage"
    }
  },
  "definitions": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "preAuthBufferPercentage": {
      "description": "Percentage of the fare which is added as a safety margin when pre-authorizing; e.g. if 20% is added as a safety margin, this value would be 0.2",
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    }
  },
  "required": ["id", "tspProductId", "name"]
}
