{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.dev.maas.global/geocoding/geocoding-reverse/request.json",
  "description": "MaaS geocoding query request schema.",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "../../../core/aws-units.json#/definitions/identityId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "lang": {"type": "string", "default": "fi" },
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lon": { "type": "number", "minimum": -180, "maximum": 180 },
        "count": { "type": "integer", "minimum": 1, "maximum": 100, "default": 5 },
        "radius": { "type": "number", "minimum": 0, "maximum": 20038000, "default": "5000" }
      },
      "required": ["lang", "lat", "lon"],
      "additionalProperties": false
    }
  },
  "required": ["payload"],
  "additionalProperties": false
}
