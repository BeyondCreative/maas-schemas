{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.dev.maas.global/routes/routes-queryresponse.json",
  "description": "MaaS.fi routes-query response schema",
  "properties": {
    "from": {
      "$ref": "../../../core/units.json#/definitions/place"
    },
    "itineraries": {
      "allOf": [
        {
          "$ref": "../../../core/units.json#/definitions/itineraries"
        },
        {
          "type": "array",
          "description": "An additional schema to verify itineraries.legs.legGeometry always exists",
          "items": {
            "legs": {
              "type": "array",
              "items": [
                {
                  "required": [ "legGeometry" ]
                }
              ]
            }
          }
        }
      ]
    },
    "debug": { "type": "object" }
  },
  "required": [ "from", "itineraries" ],
  "additionalProperties": false
}
