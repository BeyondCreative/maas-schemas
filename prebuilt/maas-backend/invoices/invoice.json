                "minimum": 1451606400
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "amount": {
                "type": "number",
                "minimum": 0,
                "multipleOf": 0.01
              },
              "currency": {
                "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
                "type": "string",
                "enum": [
                  "EUR",
                  "GBP"
