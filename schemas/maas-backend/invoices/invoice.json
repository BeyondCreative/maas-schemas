{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/invoices/invoice",
  "description": "MaaS Invoice schema",
  "definitions": {
    "InvoiceId": {
      "type": "string",
      "minLength": 2
    },
    "NewInvoice": {
      "$ref": "#/definitions/InvoiceBase",
      "required": [ "currency", "status", "lineItems" ]
    },
    "InvoiceUpdate": {
      "$ref": "#/definitions/InvoiceBase",
      "required": [ "customerId", "userId", "currency", "lineItems" ]
    },
    "InvoiceResponse": {
      "$ref": "#/definitions/InvoiceBase",
      "required": [ "customerId", "userId", "currency", "status", "lineItems" ]
    },
    "InvoiceBase": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#definitions/InvoiceId"
        },
        "customerId": {
          "$ref": "../../core/components/units.json#/definitions/identityId"
        },
        "userId": {
          "$ref": "../../core/components/units.json#/definitions/identityId"
        },
        "lineItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/InvoiceLineItem"
          },
          "minLength": 1
        }
      },
      "required": [ "id", "customerId", "total", "status", "lineItems" ],
      "additionalProperties": false
    },
    "InvoiceLineItem": {
      "description": "Invoice line item",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 4
        },
        "invoiceId": {
          "type": "string",
          "minLength": 4
        },
        "gatewayId": {
          "type": "string",
          "minLength": 4
        },
        "paymentSourceId": {
          "type": "string",
          "minLength": 4
        },
        "date": {
          "$ref": "../../core/components/units.json#/definitions/time"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "currency": {
          "$ref": "#/definitions/Currency"
        },
        "referenceInvoiceLineItemId": {
          "type": "string",
          "minLength": 4
        },
        "type": {
          "type": "string",
          "minLength": 4
        }
       },
      "required": [ "id", "gatewayId", "description", "amount", "currency", "type" ],
      "additionalProperties": false
    },
    "Currency": {
      "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
      "type": "string",
      "enum": ["EUR", "GBP"]
    }
  }
}
