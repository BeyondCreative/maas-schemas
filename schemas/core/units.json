{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/units",
  "description": "MaaS Common units",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{8}(-[A-Fa-f0-9]{4}){3}-[A-Fa-f0-9]{12}$"
    },
    "time": {
      "type": "integer",
      "maximum": 9007199254740991,
      "minimum": 1451606400
    },
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "location": {
      "type": "object",
      "properties": {
        "lat": {
          "$ref": "#/definitions/latitude"
        },
        "lon": {
          "$ref": "#/definitions/longitude"
        }
      }
    },
    "shortLocation": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/latitude"
        },
        {
          "$ref": "#/definitions/longitude"
        }
      ]
    },
    "shortLocationString": {
      "type": "string",
      "pattern": "^[+-]?\\d{1,3}(\\.\\d+)?,[+-]?\\d{1,3}(\\.\\d+)?$"
    },
    "polyline": {
      "type": "object",
      "description": "Google encoded polyline, see: https://developers.google.com/maps/documentation/utilities/polylinealgorithm",
      "properties": {
        "points": {
          "type": "string",
          "minLength": 3,
          "pattern": "^([\\x5F-\\x7E]*[\\x3F-\\x5E])+$"
        }
      },
      "required": [ "points" ]
    },
    "distance": {
      "type": "number",
      "minimum": 0
    },
    "kmDistance": {
      "type": "number",
      "minimum": 0
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+(?:\\d){6,14}\\d$"
    },
    "email": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "place": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/location"
        },
        {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "#/definitions/address"
            }
          }
        }
      ]
    },
    "fare": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "minimum": 0
        },
        "currency": {
          "type": "string",
          "enum": [ "POINT" ]
        }
      },
      "required": ["amount", "currency"],
      "additionalProperties": false
    },
    "cost": {
      "type": "object",
      "required": ["amount", "currency"],
      "properties": {
        "amount": {
          "type": "number",
          "minimum": 0
        },
        "currency": {
          "type": "string",
          "enum": [ "EUR" ]
        }
      },
      "required": ["amount", "currency"],
      "additionalProperties": false
    }
  }
}
